<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="160dp"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/grid_margin"
            android:layout_marginBottom="@dimen/grid_margin">

            <ImageView
                android:id="@+id/ballImageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/sorted_ball_description"
                app:srcCompat="@drawable/ball" />

            <TextView
                android:id="@+id/ballTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sorted_number_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/grid_margin"
            android:layout_marginBottom="@dimen/grid_margin">

            <ImageView
                android:id="@+id/ballImageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/sorted_ball_description"
                app:srcCompat="@drawable/ball" />

            <TextView
                android:id="@+id/ballTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sorted_number_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/grid_margin"
            android:layout_marginBottom="@dimen/grid_margin">

            <ImageView
                android:id="@+id/ballImageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/sorted_ball_description"
                app:srcCompat="@drawable/ball" />

            <TextView
                android:id="@+id/ballTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sorted_number_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/grid_margin"
            android:layout_marginBottom="@dimen/grid_margin">

            <ImageView
                android:id="@+id/ballImageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/sorted_ball_description"
                app:srcCompat="@drawable/ball" />

            <TextView
                android:id="@+id/ballTextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sorted_number_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/grid_margin"
            android:layout_marginBottom="@dimen/grid_margin">

            <ImageView
                android:id="@+id/ballImageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/sorted_ball_description"
                app:srcCompat="@drawable/ball" />

            <TextView
                android:id="@+id/ballTextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sorted_number_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/grid_margin"
            android:layout_marginBottom="@dimen/grid_margin">

            <ImageView
                android:id="@+id/ballImageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/sorted_ball_description"
                app:srcCompat="@drawable/ball" />

            <TextView
                android:id="@+id/ballTextView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sorted_number_size" />
        </RelativeLayout>

        <Button
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/grid_margin"
            android:layout_marginBottom="@dimen/grid_margin"
            android:width="@dimen/button_width"
            android:height="@dimen/button_height"
            android:onClick="sortNumbers"
            android:text="@string/play_button" />

        <Button
            android:id="@+id/restButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/grid_margin"
            android:width="@dimen/button_width"
            android:height="@dimen/button_height"
            android:onClick="clearNumbers"
            android:text="@string/reset_button" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>